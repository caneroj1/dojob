var get_id, hour_end, hour_start;

get_id = function(day, time) {
  if (time === -4) {
    return day + "8am";
  } else if (time === -3) {
    return day + "9am";
  } else if (time === -2) {
    return day + "10am";
  } else if (time === -1) {
    return day + "11am";
  } else if (time === 0) {
    return day + "12pm";
  } else {
    return day + time + "pm";
  }
};

hour_start = parseInt("<%= params[:hours].split(',')[0].to_i %>");

hour_end = parseInt("<%= params[:hours].split(',')[1].to_i %>");

while (hour_start <= hour_end) {
  $('#' + get_id("<%= params[:day] %>", hour_start)).addClass('unavailable');
  hour_start += 1;
}
