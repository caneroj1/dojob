.container
  .row
    .col-md-8.col-md-offset-2.text-center
      %h1.title Petcare Survey
      %hr
      %p#header-error.text-danger Please fix the required fields
      .col-md-12
        = form_tag(petcare_survey_path, method: :post, id: "pcs_form") do
          = text_field_tag(:pets, "", hidden: true, id: "pets-hidden")
          = render partial: "partials/petcare_surveys/basic_form"
          .col-md-6.col-md-offset-3.bot-margin
            = submit_tag "Finish", class: "btn btn-primary btn-block"
            = link_to "Go Back", user_path(current_user), class: "btn btn-danger btn-block"
