%table.table-striped.table
  %thead
    %tr
      %th Job Title
      %th Date Posted
      %th Options
  %tbody
    - current_user.jobs.each do |j|
      %tr
        %td= j.title
        %td= j.created_at.strftime("%-m/%d/%Y")
        %td
          -# = link_to "See Job", job_path(j)
          %a.btn.btn-primary{ href: "#{job_path(j)}"}
            %span.glyphicon.glyphicon-info-sign
            See Job
          = link_to job_path(j), method: :delete, class: "btn btn-danger remove-job" do
            %span.glyphicon.glyphicon-remove
            Delete
