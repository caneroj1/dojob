- @jobs.each_slice(2) do |slice|
  - if !slice[0].nil?
    .col-md-5.result
      .col-md-12.result-title
        %h5= slice[0].title
      .col-md-12.border
        .col-md-12.text-left.tags
          %strong Tags
          %hr.tag-row
        .col-md-12.text-left.all-tags
          = format_tags(slice[0])
        .col-md-12.text-left.desc-title
          %strong About this Job
          %hr.title-row
        .col-md-12.text-left.description
          = format_description(slice[0].description)
        .col-md-12.bottom-date.text-left
          %strong= "Posted: #{slice[0].created_at.to_datetime.strftime("%-m/%d/%Y")}"
        .col-md-12.btn-bottom
          = link_to "See Job", job_path(slice[0].id), class: "btn btn-primary btn-block"
  - if !slice[1].nil?
    .col-md-offset-2.col-md-5.result
      .col-md-12.result-title
        %h5= slice[1].title
      .col-md-12.border
        .col-md-12.text-left.tags
          %strong Tags
          %hr.tag-row
        .col-md-12.text-left.all-tags
          = format_tags(slice[1])
        .col-md-12.text-left.desc-title
          %strong About this Job
          %hr.title-row
        .col-md-12.text-left.description
          = format_description(slice[1].description)
        .col-md-12.bottom-date.text-left
          %strong= "Posted: #{slice[1].created_at.to_datetime.strftime("%-m/%d/%Y")}"
        .col-md-12.btn-bottom
          = link_to "See Job", job_path(slice[1].id), class: "btn btn-primary btn-block"
  .col-md-12.padding-between
