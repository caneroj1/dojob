%td.comment-pic
  %a.media-right.media-middle{ href: "#" }
    - if h.avatar.blank?
      = image_tag('no-avatar.png', class: "comment-pic img-circle")
    - else
      = image_tag(h.avatar, class: "comment-pic img-circle")
%td.left-td
  .media-body
    %h4.media-heading= "Offer by #{h.username}"
    %p.text-muted.comment-body.comment-date= format_date(h.created_at)
    %p= "Price: #{number_to_currency(h.price)}"
    %p= "Date: #{h.date_of_job.strftime("%-m/%d/%Y")}"
    = link_to "Accept Offer", !accepted ? accept_job_path(id: h.job_id, user_id: h.user_id, offer_id: offer_id, hard_offer_id: h.id) : "", disabled: accepted, remote: true, class: "btn btn-primary offer-accept", method: :post
