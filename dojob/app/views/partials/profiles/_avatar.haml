.col-md-10.col-md-offset-1.text-center.profile-header
  .col-md-4.profile-image
    = user_avatar(current_user)
  .col-md-8.profile-name
    .col-md-8.col-md-offset-2.profile-header-content.text-left
      %h2 Update Profile Picture
      %span#errors File type must be .jpg, .jpeg, or .png.
      %span#avatar-success Success! Check back soon to see your new picture.
    .col-md-12.profile-row
      %hr.edit-row
    .col-md-8.col-md-offset-2.profile-header-content.text-left
      = form_tag(avatar_profile_path(current_user), method: :post, remote: true, multipart: true, id: "avatar-form") do
        %span.bold-span File:
        %span#upload-name No file uploaded
        .form-group
          .file-upload.btn.btn-info#file-upload-button
            %span Upload a file
            = file_field_tag :avatar, class: "form-control upload-avatar", id: "avatar-file-field"
          = submit_tag "Upload", class: "btn btn-primary file-upload", disabled: "disabled", id: "avatar-submit"
