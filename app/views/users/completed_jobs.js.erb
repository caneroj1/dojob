<% if !@completed_jobs.empty? %>
  <table id="completed-table" class="table-striped table">
    <thead>
      <tr>
        <th>Job Title</th>
        <th>Completed On</th>
      </tr>
    </thead>
    <tbody>
      <% @completed_jobs.each do |job| %>
        <tr class="complete-row" id=<%= "job#{job.id}" %>>
          <td><%= link_to job.title, job_path(job) %></td>
          <td><%= job.completed_on.strftime("%-m/%d/%Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert-info">You have not completed any jobs.</div>
<% end %>
