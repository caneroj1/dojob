<div class="col-md-10 col-md-offset-1">
  <% if !@contacts.empty? %>
    <table id="contacts-table" class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Date Added</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr class="contact-row" id="contact<%= contact.contact_id %>">
            <td><%= link_to contact.contact_name, profile_path(contact.contact_id) %>
            <td><%= contact.created_at.strftime('%-m/%d/%Y') %>
            <td>
              <%= button_to remove_contact_user_path(contact_id: contact.contact_id), class: "btn btn-danger", method: :post, remote: true do %>
                <span class="glyphicon glyphicon-remove"></span>
                Remove
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbday>
    </table>
  <% else %>
    <div class="alert-info">You have not added any contacts. You can add contacts by visiting user profiles and clicking the "Add to Contacts" button.</div>
  <% end %>
</div>
