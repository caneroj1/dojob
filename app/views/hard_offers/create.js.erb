var publisher;
var uid = $('#uid').text();

publisher = client.publish('/comments' + $('#offerid').text(), {
  message: false,
  hard_offer: true,
  hard_offer_content: "<%= j render partial: 'partials/hard_offers/hard_offer', locals: { uid: params[:id]} %>",
  current_user_id: uid
});

publisher.callback(function() {
  $('#price').val('');
  $('#datepicker').val('');
})
