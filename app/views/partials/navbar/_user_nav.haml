%ul.nav.navbar-nav.navbar-right.navlist
  %li.dropdown.menu-item
    %a{data: { toggle: "dropdown" }, role: :button, aria: { expanded: false } }
      %table
        %tr
          %td.nav-td
            %p.nav-name= "#{current_user.first_name} #{current_user.last_name}"
          %td
            %span.glyphicon.glyphicon-user
    %ul.dropdown-menu{ role: "menu" }
      %li
        = link_to "Dashboard", user_path(current_user.id)
      %li
        = link_to "Profile", profile_path(current_user.id)
      %li
        = link_to "Log Out", destroy_user_session_path, method: :delete
  %li.menu-item#mid-separator
    %a
      %span.glyphicon.glyphicon-bell
  %li.menu-item
    %a{ href: offers_path }
      %span.glyphicon.glyphicon-envelope

= form_tag(search_jobs_path, method: :post, class: "navbar-form navbar-right") do
  .form-group
    %a.btn.btn-primary{ href: "#{jobs_path}"}
      See All Jobs
  .form-group
    = text_field_tag :query, "", class: "form-control", placeholder: "Search for jobs"
  = submit_tag "Search", class: "btn btn-primary"
